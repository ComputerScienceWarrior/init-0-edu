<table id="student-admin-index" class="admin-tables">
    <thead><th>Username</th><th>Email</th><th>Comments</th><th>Delete Student</th></thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= link_to student.username, admin_student_path(student) %></td>
                <td><%= student.email %>
                <td><%= link_to "Comments", admin_student_comments_path(student) %></td>
                <td>
                    <%= form_tag admin_student_path(student), method: "delete" do %>
                        <%= link_to image_tag("trash.png", width: '25px'), admin_student_path(student), method: "delete", id: "delete-student-btn", data: { confirm: "Are you sure you want to delete this profile?"} %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
