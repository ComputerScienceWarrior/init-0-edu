<p>
    <%= link_to "Add Course", new_course_path, id: "create-course-button"%>
</p>
<h1>All Available Courses:</h1>
<% @courses.each do |course| %>
    <%= content_tag :div, id: "courses-div" do %>
        <p>Course title: <%= link_to course.title, course_path(course) %></p>

        <%# show edit and delete links if user is an admin %>
        <% if current_student.is_admin %>
            <%= form_tag course_path(course), method: "delete" do %>
                <%= submit_tag "Delete Course" %>
            <% end %>
            <%= link_to "Edit Course", edit_course_path(course) %>
        <% else %>
            <p>Course description:<br><%= course.description %></p>
        <% end %>
    <% end %>
<% end %>