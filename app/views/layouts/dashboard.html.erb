<!DOCTYPE html>
<html>
  <head>
    <title>Learning Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'students/dashboard' %>
    <link type="text/css" rel="stylesheet" href="stylesheets/students/index.css">
    <link rel="icon" href="images/logo-icon" type="image/icon type">
  </head>

  <body>
    
    <nav id="nav-bar">
      <ul>
          <li> <%= link_to "Student Login", login_path, id: "student-login-btn" %></li>
        <% if logged_in_student? %>
          <li><%= link_to "Courses", courses_path %></li>
          <li><%= link_to "Profile", student_path(current_student) %></li>
          <li><%= link_to "Logout", logout_path %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>

</html>
